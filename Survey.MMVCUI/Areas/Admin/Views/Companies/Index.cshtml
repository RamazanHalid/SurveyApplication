@model List<Survey.ENTITIES.Entity.Company>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Şirketler
                <a style="float:right; width:15%" type="button" class="btn btn-round btn-success" href="/Admin/Companies/AddAndEdit/">Ekle</a>
            </header>
            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th> İsim</th>
                        <th> Eklenme Tarihi</th>
                        <th> Personel Sayısı</th>
                        <th>Anket Sayısı</th>
                        <th> </th>
                        <th></th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var company in Model)
                    {
                        <tr>
                            <td>@company.Name</td>
                            <td>@company.CreatedDate.ToString("dd/MM/yyyy")</td>
                            <td>2</td>
                            <td>3</td>
                            <td><a href="/Admin/CompanyUsers/Operations/@company.Id" class="btn btn-round btn-primary">Personel İşlemleri </a></td>
                            <td><a  href="/Admin/CompanySurveys/GetAll/@company.Id" class="btn btn-round btn-info">Anket İşlemleri</a></td>
                            <td>
                                <a href="/Admin/Companies/AddAndEdit/@company.Id/" class="btn btn-round btn-success"><i class="fa fa-pencil"></i></a>
                                <a href="/Admin/Companies/Delete?id=@company.Id" class="btn btn-danger btn"><i class="fa fa-trash-o "></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>
    </div>
</div> 