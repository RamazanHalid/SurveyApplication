@model List<Survey.ENTITIES.Entity.CompanySurvey>
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Anketler
                <a style="float:right; width:15%" type="button" class="btn btn-round btn-success" onclick="GoToAdd()">Ekle</a>
            </header>
            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th>İsim</th>
                        <th>Eklenme Tarihi</th>
                        <th>Başlangıç Tarihi</th>
                        <th>Bitiş Tarihi</th>
                        <th>Tamamlamış/Toplam</th>
                        <th>Devam Ediyor mu?</th>
                        <th> </th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var companySurvey in Model)
                    {
                        <tr>
                            <td>@companySurvey.Name</td>
                            <td>@companySurvey.CreatedDate.ToString("dd/MM/yyyy")</td>
                            <td>@companySurvey.StartDate.ToString("dd/MM/yyyy")</td>
                            <td>@companySurvey.EndDate.ToString("dd/MM/yyyy")</td>
                            <td>2</td>
                            <td>3</td>
                            <td><a href="/Admin/companySurveyUsers/Operations/@companySurvey.Id" class="btn btn-round btn-primary">Personel İşlemleri </a></td>
                            <td><a href="/Admin/companySurveySurveys/GetAll/@companySurvey.Id" class="btn btn-round btn-info">Anket İşlemleri</a></td>
                            <td>
                                <a href="/Admin/Companies/AddAndEdit/@companySurvey.Id/" class="btn btn-round btn-success"><i class="fa fa-pencil"></i></a>
                                <a href="/Admin/Companies/Delete?id=@companySurvey.Id" class="btn btn-danger btn"><i class="fa fa-trash-o "></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>
    </div>
</div>
@section scripts {
    <script>

        //Get company id from url
        var url_ = window.location.pathname;

        var companyId_ = url_.substring(url_.lastIndexOf('/') + 1);
        function GoToAdd() {
            window.location.href = '/Admin/CompanySurveys/Add/' + companyId_;
        }
    </script>

}