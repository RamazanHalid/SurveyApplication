@model List<Survey.ENTITIES.Entity.City>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Şehirler
                <a style="float:right; width:15%" type="button" class="btn btn-round btn-success" href="/Admin/Cities/Add/">Ekle</a>
            </header>
            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th> İsim</th>

                        <th> </th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var city in Model)
                    {
                        <tr>
                            <td>@city.Name</td>
                            <td>
                                <a href="/Admin/Cities/Add/@city.Id/" class="btn btn-round btn-success"><i class="fa fa-pencil"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>
    </div>
</div> 