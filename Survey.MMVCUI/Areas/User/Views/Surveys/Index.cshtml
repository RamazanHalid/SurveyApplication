@model List<Survey.ENTITIES.Dto.SurveyForUserDto>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/User/Views/Shared/_UserLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Şirketler
            </header>
            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th> İsim</th>
                        <th> Başlangıç Tarigi</th>
                        <th> Bitiş Tarihi</th>
                        <th> Soru Sayısı</th>
                        <th> Tamamlandı mı?</th>
                        <th> </th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var survey in Model)
                    {
                        <tr>
                            <td>@survey.Name</td>
                            <td>@survey.StartDate.ToString("dd/MM/yyyy")</td>
                            <td>@survey.EndDate.ToString("dd/MM/yyyy")</td>
                            <td>@survey.QuestionCount</td>
                            @if (!survey.IsComplete)
                            {
                                <td><a href="/User/Surveys/DoQuestions/@survey.Id" class="btn btn-round btn-primary"> Yap </a></td>
                            }
                            else
                            {
                                <td></td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </section>
    </div>
</div> 